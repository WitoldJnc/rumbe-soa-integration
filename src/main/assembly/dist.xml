<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>camel-rumbe-integration</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>check-document</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>./target</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>rumbeCheckDocumentsService*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>./kv</directory>
            <outputDirectory>./kv</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>./ansible</directory>
            <outputDirectory>./ansible</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>./version</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>version.json</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
